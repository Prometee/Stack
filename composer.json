{
    "name": "sylius/stack",
    "description": "The set of e-commerce agnostic PHP components for building your Symfony-based projects.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Sylius project",
            "homepage": "https://sylius.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/Stack/contributors"
        }
    ],
    "require": {
        "laminas/laminas-stdlib": "^3.18",
        "php": "^8.0",
        "symfony/config": "^5.4 || ^6.0",
        "symfony/dependency-injection": "^5.4 || ^6.0",
        "symfony/http-kernel": "^5.4 || ^6.0"
    },
    "require-dev": {
        "matthiasnoback/symfony-config-test": "^4.3",
        "matthiasnoback/symfony-dependency-injection-test": "^4.3.1",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3",
        "phpunit/phpunit": "^9.6",
        "symfony/console": "^5.4 || ^6.0",
        "symfony/dotenv": "^5.4 || ^6.0",
        "symfony/framework-bundle": "^5.4 || ^6.0",
        "symfony/runtime": "^5.4 || ^6.0",
        "symfony/yaml": "^5.4 || ^6.0 ",
        "symplify/monorepo-builder": "11.2.*",
        "vimeo/psalm": "^5.15"
    },
    "autoload": {
        "psr-4": {
            "Sylius\\TwigEvent\\": "src/TwigEvent/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TestApplication\\Sylius\\TwigEvent\\": "src/TwigEvent/tests/Functional/.application/src/",
            "Tests\\Sylius\\TwigEvent\\": "src/TwigEvent/tests/"
        }
    },
    "replace": {
        "sylius/twig-event": "self.version"
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    }
}
